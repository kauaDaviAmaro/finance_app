# Database Configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=finances_db
DB_HOST=localhost
DB_PORT=5432
# Or use a full database URL instead:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/finances_db

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_NAME=Finances API
DEBUG=true

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_WORKER_CONCURRENCY=1

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=no-reply@seuapp.com
EMAILS_FROM_NAME=Finances API Alertas

# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys (Test mode for development)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PRICE_ID_PRO=price_your_price_id_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe URLs (adjust for your environment)
# Development
STRIPE_SUCCESS_URL=http://localhost:3000/subscription/success
STRIPE_CANCEL_URL=http://localhost:3000/subscription/cancel
STRIPE_RETURN_URL=http://localhost:3000/subscription

# Production (uncomment and adjust when deploying)
# STRIPE_SUCCESS_URL=https://yourdomain.com/subscription/success
# STRIPE_CANCEL_URL=https://yourdomain.com/subscription/cancel
# STRIPE_RETURN_URL=https://yourdomain.com/subscription

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_CLAIM_EMAIL=mailto:admin@seuapp.com

# Docker Compose (optional)
API_PORT=8000
FRONTEND_PORT=3000
REDIS_PASSWORD=

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:8000

